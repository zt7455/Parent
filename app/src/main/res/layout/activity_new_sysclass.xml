<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainpage_bg" >

    <com.shengliedu.parent.view.CustomTitle
        android:id="@+id/ctitle"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
    </com.shengliedu.parent.view.CustomTitle>

    <RelativeLayout
        android:id="@+id/lnshang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/after_date"
        android:padding="5dp" >

        <TextView
            android:id="@+id/planbelow_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:text="2014-03-27"
            android:textColor="@color/seagreen" />

        <ImageView
            android:id="@+id/planbelow_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/planbelow_time"
            android:background="@mipmap/planbelow_image" />

        <TextView
            android:id="@+id/planbelow_xingqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/planbelow_time"
            android:text="星期一"
            android:textColor="@color/seagreen" />
    </RelativeLayout>
	<ListView
        android:id="@+id/synclass_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lnshang"
        android:layout_below="@+id/ctitle"
        android:divider="@mipmap/ic_split"
        android:listSelector="@android:color/transparent" >
    </ListView>
</RelativeLayout>