<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/seagreen"
        android:padding="8dp" >

        <TextView
            android:id="@+id/sd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#f0f0f0" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_this" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ico_arrow_up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_weight="1"
                android:background="@color/gray_this" />

            <com.shengliedu.parent.util.SelectPicker
                xmlns:su="http://schemas.android.com/apk/res-auto"
                android:id="@+id/select_picker"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                su:itemNumber="3"
                su:lineColor="@color/white"
                su:maskHight="30dp"
                android:layout_margin="10dp"
                su:noEmpty="true"
                su:normalTextColor="#777"
                su:normalTextSize="14sp"
                su:selecredTextColor="#ff000000"
                su:selecredTextSize="22sp"
                su:unitHight="40dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_weight="1"
                android:background="@color/gray_this" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:src="@mipmap/ico_arrow_down" />
    </LinearLayout>

    <TextView
        android:id="@+id/select_ok"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white" />

</LinearLayout>