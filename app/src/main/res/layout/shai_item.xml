<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shaishai_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <RelativeLayout 
        android:id="@+id/item_top"
        android:padding="5dp"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
        >
        <TextView 
            android:id="@+id/shai_kemu"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_alignParentLeft="true"
    		android:text="数学"
    		android:textColor="@color/white"
    		android:textSize="18sp"
    		android:padding="5dp"
            />
        <TextView 
            android:id="@+id/shai_1"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_alignParentRight="true"
    		android:layout_centerVertical="true"
    		android:text="角的认识"
    		android:textColor="@color/white"
    		android:textSize="14sp"
            />
        <TextView 
            android:id="@+id/shai_2"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_toLeftOf="@id/shai_1"
    		android:layout_centerVertical="true"
    		android:text="第一单元"
    		android:textColor="@color/white"
    		android:textSize="14sp"
            />
        <TextView 
            android:id="@+id/shai_3"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_toLeftOf="@id/shai_2"
    		android:layout_centerVertical="true"
    		android:textColor="@color/white"
    		android:textSize="14sp"
            />
        <TextView 
            android:id="@+id/shai_4"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_toLeftOf="@id/shai_3"
    		android:layout_centerVertical="true"
    		android:textColor="@color/white"
    		android:textSize="14sp"
            />
        <TextView 
             android:id="@+id/shai_5"
             android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_toLeftOf="@id/shai_4"
    		android:layout_centerVertical="true"
    		android:textColor="@color/white"
    		android:textSize="14sp"
            />
    </RelativeLayout>
	<LinearLayout 
	    android:id="@+id/item_img"
	    android:layout_below="@id/item_top"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="vertical"
	    >
	</LinearLayout>
	<RelativeLayout 
	    android:layout_below="@id/item_img"
	    android:padding="15dp"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
        >
	    <ImageView 
	        android:id="@+id/zan_icon"
	        android:layout_marginRight="5dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:src="@mipmap/zan_icon"
	        />
        <TextView 
            android:layout_marginRight="5dp"
            android:id="@+id/zan_number"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_toLeftOf="@id/zan_icon"
    		android:layout_centerVertical="true"
    		android:text="376"
    		android:textColor="@color/white"
    		android:textSize="14sp"
            />
        <TextView 
            android:id="@+id/shai_tuijian"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    		android:layout_alignParentLeft="true"
    		android:layout_centerVertical="true"
    		android:textColor="@color/white"
    		android:textSize="14sp"
            />
    </RelativeLayout>
</RelativeLayout>
