<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/global_action_bar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/title_bg" >

    <ImageView
        android:id="@+id/barArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:src="@mipmap/action_bar_back" />

    <TextView
        android:id="@+id/bar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="标题"
        android:textColor="@color/white"
        android:textSize="@dimen/action_title_middle" />

    <TextView
        android:id="@+id/bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="标题"
        android:textColor="@color/white"
        android:textSize="@dimen/action_title_right"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bar_right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:src="@mipmap/iv_consult"
        android:visibility="gone" />

</RelativeLayout>